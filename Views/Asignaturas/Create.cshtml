@model StudentService.Models.Asignaturas

@{
    ViewData["Title"] = "Crear Asignatura";
}

<style>
    body {
        background: linear-gradient(90deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.1) 100%), url("/images/blue.png");
    }
</style>

<center>
    <hr />
    <h1 style="color: white;">Agregar Asignaturas</h1>
    <hr />
    <div class="limiter row justify-content-center" style="text-align: center;">
        <div class="col-md-8 mb-5 mt-5">
            <form asp-action="Create">
                <div class="row justify-content-center" style="text-align: center;">
                    <div class="col-sm col-sm-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label asp-for="Numero" class="control-label"></label>
                            <input asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label asp-for="Tipo" class="control-label"></label>
                            <input asp-for="Tipo" class="form-control" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label asp-for="IdCurso" class="control-label"></label>
                            <input asp-for="IdCurso" class="form-control" />
                            <span asp-validation-for="IdCurso" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label asp-for="Duracion" class="control-label"></label>
                            <input asp-for="Duracion" class="form-control" />
                            <span asp-validation-for="Duracion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label asp-for="CreditosTeoricos" class="control-label"></label>
                            <input asp-for="CreditosTeoricos" class="form-control" />
                            <span asp-validation-for="CreditosTeoricos" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label asp-for="CreditosPracticos" class="control-label"></label>
                            <input asp-for="CreditosPracticos" class="form-control" />
                            <span asp-validation-for="CreditosPracticos" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label asp-for="GruposTeoricos" class="control-label"></label>
                            <input asp-for="GruposTeoricos" class="form-control" />
                            <span asp-validation-for="GruposTeoricos" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label asp-for="GruposPracticos" class="control-label"></label>
                            <input asp-for="GruposPracticos" class="form-control" />
                            <span asp-validation-for="GruposPracticos" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Area</label>
                            <select asp-for="IdArea" class="form-control" asp-items="ViewBag.IdArea"></select>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Titulacion</label>
                            <select asp-for="IdTitulacion" class="form-control" asp-items="ViewBag.IdTitulacion"></select>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Profesor</label>
                            <select asp-for="IdProfesor" class="form-control" asp-items="ViewBag.IdProfesor"></select>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="LibConf" /> Libre Configuracion
                            </label>
                        </div>
                    </div>
                    <div class="col-sm col-sm-4">
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="LimAdm" /> Libre Administracion
                            </label>
                        </div>
                    </div>
                    <div class="col-sm col-sm-12">
                        <div class="form-group">
                            <input type="submit" value="Agregar" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</center>

<section class="content-section bg-primary text-white text-center" id="services">
    <div class="container">
        <div class="content-section-heading">
            <h2 class="mb-5">Menú Asignaturas</h2>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6" onclick="window.location = '/asignaturas/menu'">
                <span class="service-icon rounded-circle mx-auto mb-3">
                    <i class="icon-arrow-left"></i>
                </span>
                <h4>
                    <strong>Volver atrás</strong>
                </h4>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
